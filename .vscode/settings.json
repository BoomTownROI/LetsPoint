{
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": false,
    "**/build": false
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    ".vscode": true,
    ".firebase": true,
    "build": false,
    "dist": false
  },
  "files.watcherExclude": {
    "build": true,
    "dist": true,
    "**/.git/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },
  "files.associations": {
    "*.css": "postcss"
  }
}
